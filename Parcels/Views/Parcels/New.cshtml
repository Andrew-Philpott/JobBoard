@{
  Layout = "_Layout";
}
<div class="jumbotron">
  <h1>Parcel Information</h1>
</div>
<div>
<h1>Enter your parcel's dimensions</h1>

<form action="/parcels" method="post">
  <div class="form-group">
<label for="width">Width (in):</label>
  <input id="width" name="width" type="text">
</div>
<div class="form-group">
<label for="length">Length (in):</label>
  <input id="length" name="length" type="text">
</div>
<div class="form-group">
<label for="depth">Depth (in):</label>
  <input id="depth" name="depth" type="text">
</div>
<div class="form-group">
<label for="weight">Weight (lbs):</label>
  <input id="weight" name="weight" type="text">
</div>
<button class="btn btn-primary" type="submit">Add Item</button>
</form>

