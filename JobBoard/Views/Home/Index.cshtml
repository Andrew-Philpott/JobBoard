@using JobBoard.Models;

@{ Layout = "_Layout"; }

<div class="jumbotron">
  <h1>Andrew and Jack's Job Board</h1>
  <p class="lead">Post and look at job listings.</p>
</div>
  <div id="option-container">
  <div class="option">
    <h2>Refine your search</h2>
    <a href="/jobboard">Add Job Listenings</a>
  </div>
  <div class="option">
    <h2>Employer Sign in</h2>
    <a href="/contacts/new">Sign in</a>
  </div>
</div>
<div id="jobs-list">
@if(Model.Count == 0) {
  <h2>No job listings yet</h2>
} else {
    <h2>Jobs near you</h2>
    @foreach(JobOpening job in Model)
    {
      <h2>@job.Title</h2>
      <p>Description: @job.Description</p>
      <div>
        <p>@job.Contact.Name</p>
        <p>Phone: @job.Contact.PhoneNumber</p>
        <p>Email: @job.Contact.Email</p>
      </div> 
    }
  }
</div>